{
    "extends": "@tsconfig/node12/tsconfig.json",
    "include": [
        "src"
    ],
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "outDir": "./build",
        "baseUrl": ".",
        "paths": {
            "src/*": [
                "src/*"
            ]
        },
        "sourceMap": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "declaration": true
    }
}